            @foreach (var item in Model)
            {
                <li>
                    <a href="#" class="lecture-ref" data-id="@item.Id">@item.Title</a>
                </li>
            }
        </ul>
    </nav>
    <div id="lecture-content">
    </div>
</div>

@section Scripts {
